<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.accountbook.AccountEntryActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/test">
    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <requestFocus />

        <TextView
            android:text="用途："
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/rg_acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:checked="true"
                android:text="给老婆大人买东西"
                android:textColor="#ff0033"
                android:textSize="20sp"
                android:id="@+id/rb_acc_wife"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:text="自己忍不住剁手的"
                android:textColor="#FF6600"
                android:textSize="20sp"
                android:id="@+id/rb_acc_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:text="第三方"
                android:textColor="#33cc99"
                android:textSize="20sp"
                android:id="@+id/rb_acc_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RadioGroup>
        <TextView
            android:text="金额："
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_acc_money"
            android:hint="输入金额，单位元"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="清单："
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="@string/xiejuti"
            android:id="@+id/et_acc_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/tucao"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_acc_comment"
            android:hint="可以尽情的发表言论（咳咳，该说的说...不该说的，你懂得！）"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
        <Button
            android:background="#ff6666"
            android:id="@+id/btn_acc_submit"
            android:text="提交账单"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>

